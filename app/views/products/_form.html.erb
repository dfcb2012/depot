<%= simple_form_for(@product) do |f| %>
  <div class="col-md-4 col-md-offset-4 col-xs-12 text-center">
    <% if @product.errors.any? %>
      <div class="text-danger">
        <h2>CanÂ´t Create Product!</h2>
      </div>
    <% end %>

  
    <div class="form-group">
      <%= f.input :title, input_html:{class: 'form-control'}, label: false, placeholder: 'Title' %>
    </div>
    <div class="form-group">
      <%= f.input :description, input_html:{class: 'form-control', rows: 6}, placeholder: 'Description here', label: false %>
    </div>
    <div class="form-group">
      <%= f.input :image_url, input_html:{class: 'form-control'}, label: false, placeholder: 'Image' %>
    </div>
    <div class="form-group">
      <%= f.input :price, input_html:{class: 'form-control'}, placeholder: 'Insert the price', label: false %>
    </div>
    <%= f.button :submit, "Create Product", class: 'btn btn-primary btn-block' %>
  </div>
      
<% end %>
